{
  "name": "avt-frontend",
  "version": "0.1.0",
  "description": "Arknights Voice Tools - Frontend",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "concurrently -k \"cd ../.. && uv run uvicorn core.backend.server:create_app --factory --host 127.0.0.1 --port 8000\" \"vite\"",
    "build": "tsc && vite build && electron-builder --dir",
    "build:dist": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.avt.app",
    "productName": "AVT",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "portable"
    }
  }
}
